############################################
# Disallow PHP execution in uploads
############################################

<FilesMatch "\.(php|php[0-9]?|phtml|phar)$">
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
  <IfModule !mod_authz_core.c>
    Order allow,deny
    Deny from all
  </IfModule>
</FilesMatch>

RemoveType .php .phtml .php3 .php4 .php5 .php7 .php8 .phar
php_flag engine off

